amplitude = 0.5


function code:dual_line:
    length = 5      # overall wavelength â€” how "long" the wave stretches
    amount = 100     # number of particles
    density = 0.1    # smaller = more dense (closer together), larger = more spaced apart

    for i in range(amount):
        # we use both length and density to control scale and spacing
        z = i * density
        x = -math.sin(z / length * math.pi * 2) * amplitude
        particle soul_fire_flame ^x ^1 ^z

        x = math.sin(z / length * math.pi * 2) * amplitude
        particle flame ^x ^1 ^z

